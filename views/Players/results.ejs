<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Results</title>
    <!--* Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- * -->
    <link rel="stylesheet" href="/Stylesheets/CSS/playerResults.css">

</head>
<body>
    <!-- <span id="playerData"><% playerData.player %> </span> -->

    <div class="container">
        <!-- * Header -->
        <h1 class="text-center my-5">Player Results...</h1>

        <!-- * Number of results sub heading -->
        <div class="mb-3">
            <h3 id="numOfResults" class="d-inline">
                <% let counter = 0 %> 
                <% playerData.player.forEach((individual) => {  %>
                    <% if (individual.strSport === `Soccer`) { %>
                        <% counter++ %>
                    <% } %>
                     
                <% }) %> 
                <%= counter %> 
            </h3>
            <h3 class="d-inline">
                <% if (counter === 1) { %> Result <% } else { %> Results <% } %> 
            </h3>
        </div>
        
        <!-- * -->
            <% playerData.player.forEach((individual) => { %> 
                <% if (individual.strSport === `Soccer`) { %>
                    <div class="border mb-3">
                        <div class="row">
                            <div class="col-2">
                                <% if (individual.strCutout === null) { %>
                                    <img class="img-responsive img-fluid resize border" src="/Images/playerResultsPlaceholder.jpg" alt="">
                                <% } else { %>
                                    <img class="img-responsive img-fluid resize border" src="<%= individual.strCutout %> " alt="">
                                <% } %> 
                            </div>
        
                            <div class="col-10">
                                <a href="/players/<%= individual.idPlayer %> "><%= individual.strPlayer %> </a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }) %> 
    </div>


    <!-- <script src="/JavaScript/CountSearchResults.js"></script> -->
</body>
</html>



