<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Football Database!</title>
    <!--* Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <!-- * -->
    <link rel="stylesheet" href="/Stylesheets/CSS/index.css">

    <!-- * Google Font - Graduate -->
    <link href="https://fonts.googleapis.com/css2?family=Graduate&display=swap" rel="stylesheet">
    <!-- * Tangarine -->
    <link href="https://fonts.googleapis.com/css2?family=Tangerine&display=swap" rel="stylesheet">

</head>
<body>
    <%- //include ("partials/navbar.ejs") %> 

    <div class="container">
        <h1 class="text-center mt-4 mb-0 title">Welcome to The Football Database!</h1>
        <h4 class="subTitle mt-1 mb-5">The hub of football knowledge</h4>
        
        <div class="d-block">
            <!-- * PLayer form -->
            <form action="/players" method="POST">
                <label for="" class="mb-2">Search for a player...</label>
                <input type="text" name="playerName" id="" class="form-control form-group form-inline" required>
                <input type="submit" value="Submit!" class="btn btn-default btn-large btn-outline-dark form-group">
            </form>

            <!-- * Team form -->
            <form action="/teams" method="POST">
                <label for="" class="mb-2">Search for a team...</label>
                <input type="text" name="teamName" id="" class="form-control form-group form-inline" required>
                <input type="submit" value="Submit!" class="btn btn-default btn-large btn-outline-dark form-group">
            </form>
        </div>

        <!-- *Favourites section -->
        <div class="row">
            <u><h2 class="mb-4 col-4">Favourites</h2></u>

            <% if (listOfFavourites.length > 0) { %>

                <% if (listOfFavourites.length > 1) { %>
                    <!-- *Remove ALL -->
                    <form action="/favourites/delete?_method=DELETE" method="POST" class="col-4 ml-4 mt-1">
                        <input type="submit" value="Remove All" class="btn btn-danger">
                    </form>
                <% } %>
        </div>

            <div class="row">
                <% for( let i = listOfFavourites.length - 1; i >= 0; i--) { %>
                    <div class="col-9 col-xs-9 col-sm-8 col-md-6 col-lg-4 col-xl-4 mb-4 favourites">
                        <% if (listOfFavourites[i].teams) { %>
                            <!-- *Pass through team data -->
                            <%- include ("partials/favouritesCard.ejs", {
                                name:               listOfFavourites[i].teams[0].strTeam,
                                flag:               countryFlags[listOfFavourites[i].teams[0].strCountry],
                                picture:            listOfFavourites[i].teams[0].strTeamBadge,
                                backupPicture:      listOfFavourites[i].teams[0].strTeamBadge,
                                showLink:           `/teams/${listOfFavourites[i].teams[0].idTeam}`,
                                removeLink:         `/favourites/${listOfFavourites[i].teams[0].idTeam}/delete?_method=DELETE` 
                            }) %>
                        <% } else if (listOfFavourites[i].players) { %>
                            <!-- *Pass through player data -->
                            <%- include ("partials/favouritesCard.ejs", {
                                name:               listOfFavourites[i].players[0].strPlayer,
                                flag:               countryFlags[listOfFavourites[i].players[0].strNationality],
                                picture:            listOfFavourites[i].players[0].strCutout,
                                backupPicture:      listOfFavourites[i].players[0].strThumb,
                                info1Title:         "Age:", 
                                info1:              calculatePlayerAge(listOfFavourites[i].players[0].dateBorn),
                                info2Title:         "Nat:", 
                                info2:              listOfFavourites[i].players[0].strNationality.substr(0, 3),    
                                info3Title:         "Pos:",
                                info3:              shortenPositionString(listOfFavourites[i].players[0].strPosition),
                                info4Title:         "Clb:",
                                info4:              favPlayersTeamBadge[i],
                                info5Title:         "Hei:",
                                info5:              formatPlayerHeight(listOfFavourites[i].players[0].strHeight),
                                info6Title:         "Gen:",
                                
                                info6:              formatPlayerGender(listOfFavourites[i].players[0].strGender),
                                showLink:           `/players/${listOfFavourites[i].players[0].idPlayer}`,
                                removeLink:         `/favourites/${listOfFavourites[i].players[0].idPlayer}/delete?_method=DELETE`
                            }) %>
                        <% } %>
                    </div>
                <% } %>
            </div>
        <% } else { %>
            <strong><p class="text-center py-5">No favourites selected! Search for a team/player and add them as a favourite.</p></strong>
        <% } %> 
        
    </div>
</body>
</html>
