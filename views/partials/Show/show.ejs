<%- include (`../navbar.ejs`) %> 

    <div class="text-center container">
        <!-- * Name title -->
        <h1 class="mb-5 d-inline"><%= name %> </h1>

        <!-- * Favourite button -->
        <% if (!isFav) { %>
            <form action="/favourites/<%= id %>/<%= type %>" method="POST" class="d-inline" id="favourite-icon">
                <button type="submit" class="favourite-button">
                    <i class="far fa-star"></i>
                </button>
            </form>
        <% } else { %>
            <form action="/favourites/<%= id %>/deleteOnShow/<%= type %>?_method=DELETE" method="POST" class="d-inline" id="favourite-icon">
                <button type="submit" class="favourite-button">
                    <i class="fas fa-star"></i>
                </button>
            </form>
        <% } %> 

        <!-- * Social media icons -->
        <!-- TODO make the link direct to a route which then takes user to external webpage e.g twitter -->
        <% if (facebookLink || twitterLink || instagramLink || websiteLink) { %>
            <div class="d-block mt-2">
                <% if (facebookLink) { %>
                    <a href="https://<%= facebookLink %>"><i class="fab fa-facebook fa-lg"></i></a>
                <% } %>
                <% if (twitterLink) { %>
                    <a href="https://<%= twitterLink %>"><i class="fab fa-twitter fa-lg"></i></a>
                <% } %>
                <% if (instagramLink) { %>
                    <a href="https://<%= instagramLink %>"><i class="fab fa-instagram fa-lg"></i></a>
                <% } %>
            </div>
        <% } %>
        
        
        <!-- * Description -->
        <div class="row mt-4">
            <div class="col-8">
                <div class="scrollBox">
                    <p><%= description %></p>
                </div>
            </div>
            <!-- * Profile image -->
            <div class="col-4">
                <div>
                    <img class="flag-bg-img img-responsive img-fluid" src="<%= countryFlag %> " alt="">
                    <img class="cutout img-responsive img-fluid" src="<%= img %>"  alt="Player Cutout">
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-6">
                <!-- * Carousel images -->
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <% if (carouselImg1) { %>
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="<%= carouselImg1 %>" alt="First slide">
                            </div>
                        <% } %>
                        <% if (carouselImg2) { %>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%= carouselImg2 %>" alt="Second slide">
                            </div>
                        <% } %>
                        <% if (carouselImg3) { %>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%= carouselImg3 %>" alt="Third slide">
                            </div>
                        <% } %>
                        <% if (carouselImg4) { %>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="<%= carouselImg4 %>" alt="Third slide">
                            </div>
                        <% } %>
                    </div>
                    <!-- * Carousel buttons -->
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        
    </div>